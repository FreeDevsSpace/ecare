<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    android:visibility="visible"
    android:padding="10dp"
    tools:context="com.example.administrator.ecare.Registration_Page">

    <EditText
        android:id="@+id/eTName_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Spinner_Blood_Group_Registration_Page"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTMobile_Number_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTName_Registration_Page"
        android:layout_below="@+id/eTName_Registration_Page"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tVAddress_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTDOB_Registration_Page"
        android:layout_marginTop="35dp"
        android:text="Address :"
        android:textColor="#000"
        android:textSize="20dp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTPassword_Main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTEmail_Registration_Page"
        android:layout_below="@+id/eTEmail_Registration_Page"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tVBlood_Group_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTAddress_Registration_Page"
        android:layout_marginTop="29dp"
        android:text="Blood Group :"
        android:textColor="#000"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/Spinner_Blood_Group_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tVBlood_Group_Registration_Page"
        android:layout_alignStart="@+id/bnRegister_Registration_Page"
        android:layout_marginStart="12dp"
        android:entries="@array/Blood_Group"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/eTDOB_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTMobile_Number_Registration_Page"
        android:layout_below="@+id/eTMobile_Number_Registration_Page"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textSize="17dp"
        android:hint="Date Of Birth(DD/MM/YYYY)"
        android:inputType="date"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <Button
        android:id="@+id/bnRegister_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTPassword_Main1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Register"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"

        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTEmail_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Spinner_Blood_Group_Registration_Page"
        android:layout_below="@+id/Spinner_Blood_Group_Registration_Page"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:textColorHint="#000"/>

    <EditText
        android:id="@+id/eTAddress_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tVAddress_Registration_Page"
        android:layout_alignBottom="@+id/tVAddress_Registration_Page"
        android:layout_alignStart="@+id/eTDOB_Registration_Page"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textColorHint="#000"/>
</RelativeLayout>

