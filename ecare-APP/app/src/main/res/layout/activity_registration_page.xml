<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:padding="10dp"
    tools:context="com.example.administrator.ecare.Registration_Page">



    <android.support.design.widget.TextInputLayout
        android:id="@+id/etname_registration_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/eTName_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etmobile_registration_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etname_registration_page">

        <AutoCompleteTextView
            android:id="@+id/eTMobile_Number_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tVDOB_Registration_Page"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="132dp"
        android:text="BirthDate:"
        android:textSize="17dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etdob_registration_page"
        android:layout_below="@+id/tVDOB_Registration_Page">

        <TextView
            android:id="@+id/eTDOB_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Date Of Birth(DD/MM/YYYY)"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#000"
            android:textSize="17dp"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_registration_page"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/etdob_registration_page">

        <AutoCompleteTextView
            android:id="@+id/eTAddress_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:textSize="18sp"
            android:inputType="textPostalAddress"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tVBlood_Group_Registration_Page"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner_bloodgroup_registration_page"
        android:layout_below="@+id/address_registration_page"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="12dp"
        android:text="BloodGroup:"
        android:textSize="17dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_bloodgroup_registration_page"
        android:layout_margin="8dp"
        android:layout_below="@+id/tVBlood_Group_Registration_Page">

        <Spinner
            android:id="@+id/Spinner_Blood_Group_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/etdob_registration_page"
            android:entries="@array/Blood_Group"
            android:maxLines="1"></Spinner>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etemail_registration_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_bloodgroup_registration_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp">

        <AutoCompleteTextView
            android:id="@+id/eTEmail_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpassword_registration_page"
        android:layout_below="@id/etemail_registration_page">
        <AutoCompleteTextView
            android:id="@+id/eTPassword_Main1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bnRegister_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/etpassword_registration_page"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="17dp"
        android:visibility="visible"/>
</RelativeLayout>

