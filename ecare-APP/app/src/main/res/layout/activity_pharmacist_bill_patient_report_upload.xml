<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.administrator.ecare.Pharmacist_Patient_Bill_Report_Upload">

    <TextView
        android:id="@+id/tVPatient_ID_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="P_ID :"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tVUpload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVPatient_ID_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_marginTop="30dp"
        android:text="Upload Report Here :"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tVClickHere_Upload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tVUpload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_alignBottom="@+id/tVUpload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/tVUpload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:text="Click Here "
        android:textColor="#00f"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tVPayment_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVUpload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_marginTop="104dp"
        android:text="Payment"
        android:textColor="#000"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_below="@+id/tVPayment_Pharmacist_Patient_Bill_Report_Upload">

    <Button
        android:id="@+id/btCash_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tVPayment_Pharmacist_Patient_Bill_Report_Upload"

        android:text="By Cash"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"
       />

    <Button
        android:id="@+id/btOnline_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btCash_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_alignBottom="@+id/btCash_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_alignEnd="@+id/tVClickHere_Upload_Report_Pharmacist_Patient_Bill_Report_Upload"
        android:text="Online"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btDone_Pharmacist_Patient_Bill_Report_Upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
               android:text="Done"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"/>


</RelativeLayout>
