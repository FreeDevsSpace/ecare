<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc"
    android:visibility="visible"
    tools:context="com.example.administrator.ecare.Main1">

    <EditText
        android:id="@+id/eTID_Main1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTPassword_Main1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTID_Main1"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btLog_In_Main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTPassword_Main1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:text="Log In"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tVNew_Account_Main1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btLog_In_Main1"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/btLog_In_Main1"
        android:text="Create New Account"
        android:textColor="#000"
        android:textSize="20dp"
        android:visibility="visible" />

</RelativeLayout>

