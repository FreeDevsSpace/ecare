<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:padding="10dp"
    tools:context="com.example.administrator.ecare.Pathologist_Registration_Page">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/btSave_Pathologist_Registration_Page"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
        android:id="@+id/etname_pathologist_registration_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/eTName_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="18sp"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etmobile_pathologist_registration_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etname_pathologist_registration_page">

        <AutoCompleteTextView
            android:id="@+id/eTMobile_Number_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="18sp"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tVDOB_Pathologist_Registration_Page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etmobile_pathologist_registration_page"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Birthdate:"
                android:textSize="17dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etdob_pathologist_registration_page"
        android:layout_below="@+id/tVDOB_Pathologist_Registration_Page">

        <TextView
            android:id="@+id/eTDOB_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Date Of Birth(DD/MM/YYYY)"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#000"
            android:textSize="17dp"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tVQualification_Pathologist_Registration_Page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etdob_pathologist_registration_page"
                android:layout_marginTop="10dp"
                android:text="Qualification:"
                android:textSize="17dp" />

            <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_qualification_pathologist_registration_page"
        android:layout_below="@+id/tVQualification_Pathologist_Registration_Page">
        <Spinner
            android:id="@+id/SpinnerQualification_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Pathlogist_Qualification"
            android:maxLines="1" >
        </Spinner>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_pathologist_registration_page"
        android:layout_below="@+id/spinner_qualification_pathologist_registration_page">
        <AutoCompleteTextView
            android:id="@+id/eTAddress_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:inputType="textPostalAddress"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tVBloodGroup_Pathologist_Registration_Page"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_pathologist_registration_page"
                android:layout_marginTop="10dp"
                android:text="Blood Group:"
                android:textSize="17dp" />

            <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_bloodgroup_pathologist_registration_page"
        android:layout_below="@+id/tVBloodGroup_Pathologist_Registration_Page">
        <Spinner
            android:id="@+id/SpinnerBlood_Group_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Blood_Group"
            android:maxLines="1" >
        </Spinner>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etemail_pathologist_registration_page"
        android:layout_below="@+id/spinner_bloodgroup_pathologist_registration_page">
        <AutoCompleteTextView
            android:id="@+id/eTEmail_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="18sp"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpassword_pathologist_registration_page"
        android:layout_below="@id/etemail_pathologist_registration_page">
        <AutoCompleteTextView
            android:id="@+id/eTPassword_Pathologist_Registration_Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="18sp"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btSave_Pathologist_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpassword_pathologist_registration_page"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="17dp"
        android:visibility="visible"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

