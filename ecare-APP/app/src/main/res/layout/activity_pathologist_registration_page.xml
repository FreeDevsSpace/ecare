<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    android:padding="10dp"
    tools:context="com.example.administrator.ecare.Pathologist_Registration_Page">

    <EditText
        android:id="@+id/eTName_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#000"/>

    <EditText
        android:id="@+id/eTMobile_Number_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTName_Pathologist_Registration_Page"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColorHint="#000"/>

    <EditText
        android:id="@+id/eTEmail_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/SpinnerBlood_Group_Pathologist_Registration_Page"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:textColorHint="#000"/>

    <TextView
        android:id="@+id/tVDOB_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/eTDOB_Pathologist_Registration_Page"
        android:layout_alignBottom="@+id/eTDOB_Pathologist_Registration_Page"
        android:layout_alignParentStart="true"
        android:text="Date Of Birth : "
        android:textColor="#000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/eTDOB_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTMobile_Number_Pathologist_Registration_Page"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textSize="17dp"
        android:hint="DD/MM/YYYY"
        android:inputType="date"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tVAddress_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVQualification_Pathologist_Registration_Page"
        android:layout_marginTop="24dp"
        android:text="Address : "
        android:textColor="#000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/tVQualification_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTDOB_Pathologist_Registration_Page"
        android:layout_marginTop="14dp"
        android:text="Qualification :"
        android:textColor="#000"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/tVBlood_Group_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SpinnerBlood_Group_Pathologist_Registration_Page"
        android:layout_alignBottom="@+id/SpinnerBlood_Group_Pathologist_Registration_Page"
        android:layout_alignParentStart="true"
        android:text="Blood Group :"
        android:textColor="#000"
        android:textSize="17dp"/>

    <Spinner
        android:id="@+id/SpinnerBlood_Group_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTAddress_Pathologist_Registration_Page"
        android:layout_below="@+id/eTAddress_Pathologist_Registration_Page"
        android:layout_marginTop="22dp"
        android:entries="@array/Blood_Group"/>

    <EditText
        android:id="@+id/eTPassword_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eTEmail_Pathologist_Registration_Page"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTAddress_Pathologist_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tVAddress_Pathologist_Registration_Page"
        android:ems="10"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:textColorHint="#000"/>

    <Spinner
        android:id="@+id/SpinnerQualification_Pathologist_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tVQualification_Pathologist_Registration_Page"
        android:layout_alignStart="@+id/eTDOB_Pathologist_Registration_Page"
        android:layout_marginStart="15dp"
        android:entries="@array/Pathlogist_Qualification"/>

    <Button
        android:id="@+id/btSave_Pathologist_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Save"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:visibility="visible"/>


</RelativeLayout>
