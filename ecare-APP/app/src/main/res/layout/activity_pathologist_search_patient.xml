<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:padding="10dp"
    android:paddingTop="30dp"
    tools:context="com.example.administrator.ecare.Pathologist_Search_Patient">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/etenter_patient_id_pathologist_search_patient">
        <AutoCompleteTextView
            android:id="@+id/eTEnter_Patient_ID_Pathologist_Search_Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColorHint="#000"
            android:hint="Enter Patient ID"
            android:inputType="text|number"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btContinue_Pathologist_Search_Patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etenter_patient_id_pathologist_search_patient"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:text="Continue"/>

    <TextView
        android:id="@+id/tVLogOut_Pathologist_Search_Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="LogOut"/>
</RelativeLayout>
