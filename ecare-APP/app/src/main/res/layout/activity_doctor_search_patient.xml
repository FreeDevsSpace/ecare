<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.administrator.ecare.Doctor_Search_Patient">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etpatient_id_doctor_search_patient">
        <AutoCompleteTextView
            android:id="@+id/eTPatient_ID_Doctor_Search_Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Patient ID"
            android:inputType="number"
            android:textColorHint="#000"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btContinue_Doctor_Search_Patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etpatient_id_doctor_search_patient"
        android:layout_marginTop="41dp"
        android:text="Continue"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp" />
</RelativeLayout>
