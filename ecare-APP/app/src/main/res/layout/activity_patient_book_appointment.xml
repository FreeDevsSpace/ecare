<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.administrator.ecare.Patient_Book_Appointment">

    <TextView
        android:id="@+id/tVPatient_ID_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="P_ID :"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tVAppointment_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVPatient_ID_Patient_Book_Appointment"
        android:layout_marginTop="24dp"
        android:text="Appointment :"
        android:textColor="#000"
        android:textSize="18dp"/>

   <!-- <TextView
        android:id="@+id/tVAvailable_Time_Slot_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:text="Available Time Slot :"
        android:textColor="#000"
        android:textSize="18dp"/>-->

    <TextView
        android:id="@+id/tVSelect_Date_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:hint="Selected Date Here"
        android:layout_alignBottom="@+id/btSelect_Date_Patient_Book_Appointment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="date"
        android:textColorHint="#000" />

    <TextView
        android:id="@+id/tVChoose_Time_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/btSelect_Date_Patient_Book_Appointment"
        android:layout_marginTop="35dp"
        android:text="Choose Time :"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_time_Patient_Book_Appointment"
        android:layout_width="125dp"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/tVChoose_Time_Patient_Book_Appointment"
        android:layout_alignBottom="@+id/tVChoose_Time_Patient_Book_Appointment"
        android:layout_alignEnd="@+id/tVSelect_Date_Patient_Book_Appointment"
        android:entries="@array/Appointment_Time"
        android:prompt="@array/Appointment_Time" />

   <!-- <Button
        android:id="@+id/btFind_Appointment_Time_Slot_Patient_Book_Appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:text="Find Appointment Time Slot"
        android:textColor="#FFF"
        android:textSize="15dp" /> -->

    <Button
        android:id="@+id/btSelect_Date_Patient_Book_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVAppointment_Patient_Book_Appointment"
        android:layout_marginTop="43dp"
        android:text="Select Date"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btSave_Patient_Book_Appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Save"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="15dp"
       />

</RelativeLayout>
