<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc"
    android:visibility="visible"
    tools:context="com.example.administrator.ecare.Patient_Search_Doctor">

    <TextView
        android:id="@+id/tVSearch_Doctor_Patient_search_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Search Doctor"
        android:textColor="#140b44"
        android:textSize="20dp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tVCity_Patient_Search_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVSearch_Doctor_Patient_search_Doctor"
        android:layout_marginTop="30dp"
        android:text="City"
        android:textSize="22dp"
        android:textColor="#000"
        android:visibility="visible"/>

    <Spinner
        android:id="@+id/SpinnerCity_Patient_Search_Doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tVCity_Patient_Search_Doctor"
        android:layout_marginEnd="163dp"
        android:layout_marginTop="32dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tVQualification_Patient_Search_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SpinnerCity_Patient_Search_Doctor"
        android:layout_marginTop="30dp"
        android:text="Qualification"
        android:textSize="22dp"
        android:textColor="#000"
        android:visibility="visible"/>

    <Spinner
        android:id="@+id/SpinnerQualification_Patient_Search_Doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SpinnerCity_Patient_Search_Doctor"
        android:layout_below="@+id/tVQualification_Patient_Search_Doctor"
        android:layout_marginTop="34dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tVSpecialization_Patient_Search_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SpinnerQualification_Patient_Search_Doctor"
        android:layout_marginTop="30dp"
        android:text="Specialization :"
        android:textColor="#000"
        android:textSize="22dp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/SpinnerSpecialization_Patient_Search_Doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SpinnerQualification_Patient_Search_Doctor"
        android:layout_below="@+id/tVSpecialization_Patient_Search_Doctor"
        android:layout_marginTop="30dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btSearch_Patient_Search_Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tVQualification_Patient_Search_Doctor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:text="Search"
        android:visibility="visible" />
</RelativeLayout>
