<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/j"
    android:visibility="visible"
    tools:context="com.example.administrator.ecare.Doctor_Registration_Page">


    <EditText
        android:id="@+id/eTName_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        android:textSize="14dp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTMobile_Number_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eTName_Doctor_Registration_Page"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColorHint="#000"
        android:textSize="14dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tVAddress_Doctor_Registration_Page"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTDate_Of_Birth_Doctor_Registration_Page"
        android:layout_marginTop="18dp"
        android:text="Address :"
        android:textColor="#000"
        android:textSize="14dp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/eTPassword_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/Spinner_Qualification_Doctor_Registration_Page"
        android:layout_below="@+id/eTEmail_Doctor_Registration_Page"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#000"
        android:textSize="14dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tVSpecialization_Doctor_Registration_Page"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVQualification_Doctor_Registration_Page"
        android:layout_marginTop="18dp"
        android:text="Specialization:"
        android:textColor="#000"
        android:textSize="14dp"/>

    <Spinner
        android:id="@+id/Spinner_Specialization_Doctor_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tVSpecialization_Doctor_Registration_Page"
        android:layout_alignBottom="@+id/tVSpecialization_Doctor_Registration_Page"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/tVSpecialization_Doctor_Registration_Page"
        android:entries="@array/Specialization"
        android:textSize="14dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/eTDate_Of_Birth_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eTMobile_Number_Doctor_Registration_Page"
        android:ems="10"
        android:hint="Date Of Birth (DD/MM/YYYY)"
        android:inputType="date"
        android:textColorHint="#000"
        android:textSize="14dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tVQualification_Doctor_Registration_Page"
        android:layout_width="106dp"
        android:layout_height="22dp"
        android:layout_below="@+id/eTPassword_Doctor_Registration_Page"
        android:layout_marginTop="21dp"
        android:text="Qualification:"
        android:textColor="#000000"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tVWorkplace_Doctor_Registration_Page"
        android:layout_width="124dp"
        android:layout_height="21dp"
        android:layout_alignBaseline="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:layout_alignBottom="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:layout_toStartOf="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:text="WorkPlace:"
        android:textColor="#000000"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/Spinner_Qualification_Doctor_Registration_Page"
        android:layout_below="@+id/tVSpecialization_Doctor_Registration_Page"
        android:ems="10"
        android:hint="Hospital Name"
        android:inputType="textPersonName"
        android:textColorHint="#000"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/eTHospital_Address_Doctor_Registration_page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:layout_below="@+id/eTHospital_Name_Doctor_Registration_Page"
        android:ems="10"
        android:hint="Hospital Address"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColorHint="#000"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/eTEmail_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/eTCity_Doctor_Registration_Page"
        android:layout_alignStart="@+id/eTCity_Doctor_Registration_Page"
        android:layout_below="@+id/eTCity_Doctor_Registration_Page"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#000"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/eTCity_Doctor_Registration_Page"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tVAddress_Doctor_Registration_Page"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        android:textColorHint="#000"
        android:textSize="14dp"/>
    <EditText
        android:id="@+id/eTPostal_Address_Doctor_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTCity_Doctor_Registration_Page"
        android:layout_below="@+id/eTDate_Of_Birth_Doctor_Registration_Page"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textColorHint="#000"
        android:textSize="14dp"/>

    <Spinner
        android:id="@+id/Spinner_Qualification_Doctor_Registration_Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Spinner_Specialization_Doctor_Registration_Page"
        android:layout_alignTop="@+id/tVQualification_Doctor_Registration_Page"
        android:entries="@array/Qualification"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tVFees_Doctor_Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eTHospital_Address_Doctor_Registration_page"
        android:text="Fees:"
        android:textColor="#000"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/eTFees_Doctor_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tVFees_Doctor_Registration"
        android:layout_alignBottom="@+id/tVFees_Doctor_Registration"
        android:layout_alignStart="@+id/eTHospital_Address_Doctor_Registration_page"
        android:ems="10"
        android:hint="Fees"
        android:inputType="number"
        android:textColorHint="#000"
        android:textSize="14dp"/>
    <Button
        android:id="@+id/bnRegister_Doctor_Registration_Page"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="#000"
        android:textSize="14dp"
        android:visibility="visible"/>

</RelativeLayout>

